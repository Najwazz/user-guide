
<h1>Log In</h1>

<%= form_tag sessions_path do %>
    <%= label_tag :email %><br />
    <%= text_field_tag :email,params[:email] %><br/>

    <%= label_tag :password %><br />
    <%= password_field_tag :password %><br />

    <%= submit_tag "Log In" %>
<% end %>

<p>Pas encore inscrit ? <%= link_to("S'inscrire !", :controller => 'users', :action=>'new') %></p>
